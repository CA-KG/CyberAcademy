---
import Header from '../components/Header.astro';
import Slider from '../components/Slider';
import Advantages from '../components/Advantages';
import CoursesSection from '../components/CoursesSection';
import AboutCource from '../components/AboutCource';
import Footer from '../components/Footer';
import TeacherSection from '../components/TeacherSection'
import AboutUs from '../components/AboutUs'
import FAQ from '../components/FAQ';
import Preloader from '../components/Preloader';

---

<html lang="ru">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="utf-8" />
    <title>КиберАкадемия</title>
    <style>
    body {


  margin: 0;
  background:#04356f ; /* или любой другой */
  color: #fff; /* по желанию — если нужен белый текст */
  font-family: sans-serif;
}
html {
  scroll-behavior: smooth;
}

/* Отступ для фиксированного header */
:target {
  scroll-margin-top: 100px; /* Подберите значение под высоту вашего header */
}

      /* Стили для слайдера */
      .slider-section {
        position: relative;
        height: 500px;
        overflow: hidden;
      }

      /* Стили для преимуществ (добавьте эти новые стили) */
      .advantages-section {
        padding: 4rem 1rem;
        background: #f8f9fa;
        position: relative;
        z-index: 3; /* Важно: должен быть выше видеофона */
      }

      /* Общие стили */
      :global(.slider-section > *) {
        position: relative;
        z-index: 2;
      }

      .my-swiper {
        width: 100%;
        height: 100%;
      }

      .slider__block {
        text-align: center;
        color: white;
        padding: 40px;
        max-width: 800px;
        margin: auto;
      }

      :global(.swiper-pagination-bullet) {
        background: white;
        opacity: 0.6;
      }

      :global(.swiper-pagination-bullet-active) {
        background: #0066ff;
        opacity: 1;
      }
      .animated-bg {
    position: absolute;
    width: 100%;
    height: 100%;
    background: linear-gradient(-45deg, #1a237e, #283593, #5c6bc0, #3949ab);
    background-size: 400% 400%;
    animation: gradientBG 15s ease infinite;
    z-index: 1;
  }

  @keyframes gradientBG {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
    </style>
  </head>

  <body>
<Preloader client:load/>

    <Header />
  
  
    <section >
      <AboutCource client:only="react"/>
    </section>
    <section id="about-us">
      <AboutUs client:only="react" />
    </section>
    <section>
      <TeacherSection client:only="react"/>
    </section>

    
    <section class="advantages-section" id="advantages">
      <Advantages client:only="react" />
    </section>
    
    <section id="our-cource">
      <CoursesSection client:only="react"/>
    </section>
    
    <section id="faq">
      <FAQ client:only="react"/>
    </section>

    <section>
      <Footer client:only="react"/>
    </section>

  </body>
</html>

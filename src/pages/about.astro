---
// src/pages/about.astro
import '../i18n/client';
import Layout from "../components/layouts/Layout.astro";
import Header from "../components/Header.astro";
import TeachersInAbout from "../components/TeachersInAbout";
import HeroSection from "../components/componentsOfPage/about/HeroSection";
import MissionSection from "../components/componentsOfPage/about/missionSection/MissionSection";
import Advantages from "../components/componentsOfPage/about/advantages/AdvanatagesSection";
import CoursesSection from "../components/componentsOfPage/about/courses/CoursesSection";
import AchvemetsSection from "../components/componentsOfPage/achivements/AchivementsSection";
import CTASection from "../components/componentsOfPage/cta/CTASection";

---

<Layout title="О нас | КиберАкадемия KG">
  <main class="about-page">
    <Header />
    
    <!-- Hero-секция с анимацией -->
    <section class="hero-section">
     <HeroSection client:only="react"/>
    </section>

    <section class="mission-section">
        <MissionSection client:only="react"?>
      </div>
    </section>

    <!-- Наши ценности с иконками -->
    <section class="values-section">
      <div class="container">
        <Advantages client:only="react"/>
      </div>
    </section>

    <!-- Наши курсы -->
    <section id="courses" class="courses-section">
      <div class="container">
      <CoursesSection client:only="react"/>
      </div>
    </section>

    <!-- Команда с модальными окнами -->
    <section class="team-section">
      <div class="container">
        <div class="container-teachers">
          <TeachersInAbout client:only="react"/>
        </div>
        </div>
      </div>
    </section>

    <!-- Достижения с анимацией -->
    <section class="achievements-section">
      <div class="container">
        <AchvemetsSection client:only="react"/>
      </div>
    </section>

    <!-- CTA секция -->
    <section id="contact" class="cta-section">
      <div class="container">
       <CTASection client:only="react"/>
      </div>
    </section>
  </main>
</Layout>



<style>
  /* Глобальные стили */
  :root {
    --primary: #1e40af;
    --primary-light: #93c5fd;
    --secondary: #10b981;
    --dark: #1e293b;
    --light: #f8fafc;
    --gray: #64748b;
    --danger: #ef4444;
  }

.achievements-section {
    padding: 100px 0;
    background: linear-gradient(135deg, var(--primary) 0%, #2563eb 100%);
    color: white;
    text-align: center;
  }
  
  
  .hero-title span {
  color: var(--primary-light);
}
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  
  body {
    font-family: 'Inter', sans-serif;
    line-height: 1.6;
    color: var(--dark);
    background-color: white;
    overflow-x: hidden;
  }
  
  .container {
  width: 100%;
  padding: 0 20px;
  margin: 0 auto;
}
  .container-teachers {
    width: 100%;
    padding-top: 25px;
    padding-bottom: 25px;
    margin: 0 auto;
  }
  
  h1, h2, h3, h4 {
    font-size: 70px;
    font-weight: 700;
    line-height: 1.2;
  }

  h5 {
    line-height: 1.2;
    font-size: 50px;
    font-weight: 700;
  }
  
  a {
    text-decoration: none;
    color: inherit;
  }
  
  ul {
    list-style: none;
  }
  
  img {
    max-width: 100%;
    height: auto;
  }
  
  
  
  /* Миссия */
  .mission-section {
    padding: 100px 0;
    background-color: white;
  }
 
  .hero-section {
  position: relative;
  background: linear-gradient(135deg, var(--primary) 0%, #2563eb 100%);
  color: white;
  overflow: hidden;
  width: 100%;
  margin: 0 auto;
}
.cta-section {
    padding: 100px 0;
    background: var(--primary);
    color: white;
    text-align: center;
  }

  
  
  
  /* Анимации */
  @keyframes codeAnimation {
    0% {
      transform: translateX(-100%);
    }
    100% {
      transform: translateX(200%);
    }
  }
  
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
    100% {
      transform: translateY(0px);
    }
  }
  
  /* Адаптивность */
  @media (max-width: 1024px) {
    .hero-section h1 {
      font-size: 2.8rem;
    }
    
    .mission-grid {
      grid-template-columns: 1fr;
    }
    
    .mission-image {
      order: -1;
    }
    
    .modal-grid {
      grid-template-columns: 1fr;
    }
    
    .modal-image {
      max-width: 300px;
      margin: 0 auto;
    }
  }
  
  @media (max-width: 768px) {
    .hero-section h1 {
      font-size: 2.2rem;
    }
    
    .subtitle {
      font-size: 1.2rem;
    }
    
    .hero-buttons {
      flex-direction: column;
    }
    
    
    
    .stats-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .hero-section h1 {
      font-size: 1.8rem;
    }
    
    .values-grid,
    .courses-grid,
    .teachers-grid,
    .stats-grid {
      grid-template-columns: 1fr;
    }
    
    .testimonial {
      padding: 30px 20px;
    }
  }
  @media (min-width: 1200px) {
  .container {
    padding-left: 300px;
    padding-right: 300px;
  }
}
</style>
